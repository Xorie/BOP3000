<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".payment_method.newPayment_method">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center_horizontal"
        android:text="@string/payment_method_tittle2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/white"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method_cardnr"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/paymentcardnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:autofillHints="@string/payment_method_writecardnr"
        android:hint="@string/payment_method_writecardnr"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/white"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_method_expirationDate"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/paymentexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:hint="@string/payment_method_writeexp"
        android:autofillHints="@string/payment_method_writeexp"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/white"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_method_CVC"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/paymentcvc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:autofillHints="@string/payment_method_writecvc"
        android:hint="@string/payment_method_writecvc"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/white" />

    <Button
        android:id="@+id/pay_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/save"
        android:onClick="save_payment"
        android:text="@string/payment_method_save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/pay_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/gray"
        android:text="@string/inspiration_back"
        android:onClick="backtopayment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>